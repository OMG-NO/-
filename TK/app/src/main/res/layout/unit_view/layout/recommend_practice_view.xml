<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="#e4e2e2"
    android:orientation="horizontal">

    <FrameLayout
        android:id="@+id/bulb_btn"
        app:layout_widthPercent="45%"
        app:layout_marginEndPercent="3%"
        android:layout_height="@dimen/unit_recommend_practice_height"
        android:layout_gravity="center_vertical|end"
        android:layout_marginStart="20dp"
        android:background="@drawable/recbulb_shape">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:text="智能练习"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="end|center_vertical"
            android:rotation="30"
            android:src="@drawable/rec_bulb" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/pencil_btn"
        app:layout_widthPercent="45%"
        app:layout_marginStartPercent="3%"
        android:layout_height="@dimen/unit_recommend_practice_height"
        android:layout_gravity="center_vertical|start"
        android:background="@drawable/recpencil_shape">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:text="按知识点练习"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="90dp"
            android:src="@drawable/rec_pencil" />
    </FrameLayout>

</android.support.percent.PercentFrameLayout>