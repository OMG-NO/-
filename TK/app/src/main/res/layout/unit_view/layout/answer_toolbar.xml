<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@color/main_white">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/question_count"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/back_btn"
                android:layout_centerVertical="true"
                android:src="@drawable/left"
                android:layout_width="30dp"
                android:layout_height="30dp" />

            <TextView
                android:id="@+id/current_question"
                android:text="1"
                android:layout_toEndOf="@+id/back_btn"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="15dp" />
            <TextView
                android:id="@+id/thesprit"
                android:text="/"
                android:layout_toEndOf="@+id/current_question"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="5dp" />
            <TextView
                android:id="@+id/whole_question"
                android:text=""
                android:layout_toEndOf="@+id/thesprit"
                android:textSize="15sp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="2dp" />
        </RelativeLayout>

        <TextClock
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="43dp"
            android:id="@+id/timer_tool"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/question_count" />

        <ImageView
            android:src="@drawable/text"
            android:layout_marginEnd="20dp"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/like_btn"
            android:layout_width="25dp"
            android:layout_height="25dp" />

        <ImageView
            android:id="@+id/like_btn"
            android:src="@drawable/icon_star"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            android:layout_width="25dp"
            android:layout_height="25dp" />


    </RelativeLayout>

</android.support.v7.widget.Toolbar>