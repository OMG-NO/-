<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@drawable/mine_rl_bg1">
    <RelativeLayout
        android:id="@+id/rl_num"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_result_num"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:textColor="#fff"
            android:text="1"
            android:gravity="center"
            android:background="@drawable/grade_num_bg1"/>
    </RelativeLayout>
    <TextView
        android:layout_marginLeft="10dp"
        android:id="@+id/tv_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#333"
        android:text="未答"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/rl_num"/>
    <Button
        android:id="@+id/btn_analysis"
        android:gravity="center"
        android:layout_width="60dp"
        android:layout_height="35dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:textColor="@color/colorTheme"
        android:text="解析"
        android:background="@drawable/grade_btn_bg"/>
</RelativeLayout>