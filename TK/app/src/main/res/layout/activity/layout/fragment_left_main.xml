<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.jredu.tk.fragment.LeftMainFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        >
        <com.jredu.tk.help.RoundImageView
            android:id="@+id/img_user_photo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/ic_launcher"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_toRightOf="@id/img_user_photo"
            android:id="@+id/tv_user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            android:textSize="18sp"
            android:text="小怪兽"
            android:textColor="#333"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/tv_ability"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:gravity="center"
            android:text="能力测评"
            android:textColor="#fff"
            android:layout_gravity="center_vertical"
            android:background="@drawable/main_left_bg"/>
        <RelativeLayout
            android:id="@+id/rl_result"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:background="@drawable/main_right_bg">
            <TextView
                android:id="@+id/tv_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="答题记录:"
                android:textColor="#fff"
                android:layout_centerInParent="true"/>
            <TextView
                android:id="@+id/tv_result_num"
                android:layout_toRightOf="@id/tv_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="#fff"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/left_lv_bg"/>
    <ListView
        android:scrollbars="none"
        android:divider="@null"
        android:listSelector="#54dadada"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/lv"/>
</LinearLayout>
