<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_commit"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jredu.tk.activity.CommitActivity">
    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/split"
        >

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:src="@mipmap/bar_back_normal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/img_back"
            android:text="提交答案"
            android:textColor="#333"
            android:textSize="18sp"
            android:layout_marginLeft="20dp"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/tv_commit"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:textColor="#fff"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:background="@color/colorTheme"
        android:text="提交答案"/>
    <GridView
        android:id="@+id/gv"
        android:layout_above="@id/tv_commit"
        android:layout_below="@id/rl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:numColumns="auto_fit"
        android:columnWidth="60dp"
        android:stretchMode="columnWidth"
        android:verticalSpacing="10dp"
        android:horizontalSpacing="10dp"
        android:cacheColorHint="#00000000"
        android:listSelector="#f5f5f5"
        android:scrollbars="none"
        android:fadingEdge="none"
        android:drawSelectorOnTop="false"
        android:gravity="center" />
</RelativeLayout>
