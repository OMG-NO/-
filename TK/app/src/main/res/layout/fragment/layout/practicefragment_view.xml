        <include
            android:id="@+id/recomment_practive"
            layout="@layout/recommend_practice_view" />

        <include
            android:id="@+id/recommend_list"
            layout="@layout/recommend_list_view" />
        <include
            android:id="@+id/collection_mistake"
            layout="@layout/collection_mistake_view"/>
    </LinearLayout>
</ScrollView>
