<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!-- 主界面Tablayout的字体大小-->
    <style name="tabTextSize">
        <item name="android:textSize">18sp</item>
    </style>
    <!-- MainFragment 的popwindow动画-->
    <style name="main_pop">
        <item name="android:windowEnterAnimation">@anim/main_pop_enter</item>
        <item name="android:windowExitAnimation">@anim/main_pop_exit</item>
    </style>
    <!--答题页面的样式-->
    <style name="AppThemeAnswer" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>
    <!--答题页面toolbar-->
    <style name="ActionBar" parent="Base.ThemeOverlay.AppCompat.ActionBar">
        <item name="android:displayOptions">homeAsUp</item>
    </style>
    <!--SwipeActivity去除黑影-->
    <style name="Theme.NoBlack" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- 滑动Activity时透明，动画无效果，窗口同名属性-->
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@style/activityAnim</item>
    </style>
    <!--翻页动画-->
    <style name="activityAnim" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/left_in</item>
        <item name="android:activityOpenExitAnimation">@anim/left_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/left_out</item>
        <item name="android:activityCloseExitAnimation">@anim/right_out</item>
    </style>
    <!--MineActivity的PopupWindow的动画-->
    <style name="mine_pop">
        <item name="android:windowEnterAnimation">@anim/mine_pop_enter</item>
        <item name="android:windowExitAnimation">@anim/mine_pop_exit</item>
    </style>
</resources>
